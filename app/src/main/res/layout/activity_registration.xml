<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".app.RegistrationActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-39dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="63dp"
            android:layout_height="75dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="24dp"
            app:srcCompat="@drawable/ic_cryptocompare_logo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:layout_marginStart="20dp"
            android:text="Register to CryptoDekho"
            android:textColor="@color/indigo_700"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

        <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        android:text="User Email ID"
        android:textColor="@color/indigo_700"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/email"
        style="@style/Widget.AppCompat.Light.ActionBar.Solid"
        android:layout_width="339dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:ems="10"
        android:hint="Enter mail ID here"
        android:inputType="text"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="28dp"
        android:text="Password"
        android:textColor="@color/indigo_700"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/pwd"
        style="@style/Widget.AppCompat.Light.ActionBar.Solid"
        android:layout_width="331dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:ems="10"
        android:hint="Enter password here"
        android:inputType="text"
        android:password="true"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        android:text="Enter your owned Cryptocoins"
        android:textColor="@color/indigo_700"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/coins"
        style="@style/Widget.AppCompat.Light.ActionBar.Solid"
        android:layout_width="339dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:ems="10"
        android:hint="Enter your coins seperated by comma"
        android:inputType="text"/>


    <Button
        android:id="@+id/register"
        android:layout_width="168dp"
        android:layout_height="70dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="120dp"
        android:backgroundTint="@color/indigo_700"
        android:text="Register"
        android:layout_gravity="center"
        android:textSize="16sp"/>
    </LinearLayout>
</ScrollView>