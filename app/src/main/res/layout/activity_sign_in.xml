<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".app.SignInActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="85dp"
            android:layout_height="86dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="22dp"
            app:srcCompat="@drawable/ic_cryptocompare_logo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="26dp"
            android:text="Login to CryptoDekho"
            android:textStyle="bold"
            android:textColor="@color/indigo_700"
            android:textSize="22sp"/>


    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Email ID"
        android:layout_marginStart="35dp"
        android:layout_marginTop="70dp"
        android:textColor="@color/indigo_700"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/useremail"
        style="@style/Widget.AppCompat.Light.ActionBar.Solid"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:hint="Enter mail ID here"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginStart="35dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/indigo_700"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/passwd"
        style="@style/Widget.AppCompat.Light.ActionBar.Solid"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:password="true"
        android:hint="Enter password here"
        android:inputType="text"/>

    <Button
        android:id="@+id/signin"
        android:layout_width="168dp"
        android:layout_height="66dp"
        android:layout_marginTop="84dp"
        android:backgroundTint="@color/indigo_700"
        android:text="Login"
        android:layout_gravity="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwd" />
</LinearLayout>